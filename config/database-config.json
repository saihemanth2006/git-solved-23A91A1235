{
  "production": {
    "connection": {
      "type": "distributed",
      "hosts": [
        "node1.example.com",
        "node2.example.com",
        "node3.example.com"
      ],
      "port": 5432,
      "database": "devops_production",
      "username": "prod_admin",
      "ssl_mode": "require",
      "pool_size": 30,
      "timeout": 45,
      "connection_pooling": "pgbouncer",
      "read_replicas": 3
    },
    "backup": {
      "enabled": true,
      "strategy": "continuous",
      "schedule": "0 2 * * *",
      "retention_days": 60,
      "location": "s3://backups/production",
      "encryption": true,
      "geo_redundancy": true
    },
    "replication": {
      "enabled": true,
      "replicas": 3,
      "sync_mode": "semi-synchronous",
      "multi_region": true,
      "regions": ["us-east", "eu-west", "ap-south"]
    },
    "monitoring": {
      "slow_query_threshold": 150,
      "alert_on_anomaly": true,
      "metrics_export": "prometheus"
    },
    "ai_optimization": {
      "query_optimization": false,
      "index_suggestions": false,
      "auto_vacuum_ml": false
    }
  },
  "development": {
    "connection": {
      "host": "localhost",
      "port": 5432,
      "database": "devops_development",
      "ssl_mode": "disable",
      "pool_size": 5
    },
    "backup": {
      "enabled": false,
      "schedule": "manual"
    },
    "features": {
      "seed_data": true,
      "debug_queries": true
    }
  }
}
